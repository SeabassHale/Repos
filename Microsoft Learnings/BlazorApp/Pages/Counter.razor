@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount.</p>
<p role="status">Message: @dikNote</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
        if (currentCount >= 10)
        {
            dikNote = "Oh no you dint";
        }
        if (currentCount >= 20)
        {
            dikNote = "Oh yeh you did!";
        }
        if (currentCount >= 30)
        {
            dikNote = "Now you jus showin off";
        }
        if (currentCount >= 50)
        {
            dikNote = "Dick";
        }
    }

    public string dikNote = "Egg";
   
}
